<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/appBaseColor"
        android:layout_alignParentTop="true"
        android:id="@+id/top"

        >
        <ImageView

            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_40dp"
            android:layout_gravity="center"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="알람 정보"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="23dp" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/ic_dot"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/dot"
                android:layout_marginEnd="12dp"
                />

        </RelativeLayout>





    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알람명"
                android:textColor="@color/appBaseColor"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/Txt_alarmName"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989898"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1회 투여량"
                android:textColor="@color/appBaseColor"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/Txt_oneTimeDose"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989898"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="@color/appBaseColor"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1회 투여횟수"/>
            <TextView
                android:id="@+id/Txt_oneTimeCapacity"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989898"
                />

            <TextView
                android:layout_marginTop="8dp"
                android:textColor="@color/appBaseColor"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="복용 기간"/>
            <TextView
                android:id="@+id/Txt_dosingPeriod"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989898"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:textColor="@color/appBaseColor"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="복용타입"/>
            <TextView
                android:id="@+id/Txt_type"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#989898"
                />


        </LinearLayout>
    </ScrollView>




</LinearLayout>