<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_blue_40dp"/>

        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 가입"
            android:textColor="#050404"
            android:textSize="25dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <EditText
            android:id="@+id/Txt_sua_id"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:hint="아이디"
            android:inputType="text"
            />
        <Button
            android:id="@+id/Btn_duplicate"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="중복확인"/>




    </LinearLayout>
    <EditText
        android:id="@+id/Txt_sua_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="이메일주소"
        android:inputType="text" />

    <EditText
        android:id="@+id/Txt_sua_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="비밀번호"
        android:inputType="text" />

    <EditText
        android:id="@+id/Txt_sua_passwordCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="비밀번호 확인"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/Txt_sua_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="이름 (실명 입력)"
        android:inputType="textPassword"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/Txt_birth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0.7"
            android:inputType="textPassword"
            android:hint="생년월일(6자리입력)"
             />
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">


        <RadioButton
            android:id="@+id/Rdb_man"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="false"
            android:text="남"

            />

        <RadioButton
            android:id="@+id/Rdn_woman"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="true"
            android:text="여" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/Btn_sua_signUp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="회원가입"
        android:textAlignment="center" />
</LinearLayout>