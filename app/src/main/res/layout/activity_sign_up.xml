<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="true"
            android:foregroundGravity="center"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:src="@drawable/ic_arrow_back_black_40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:text="회원가입"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </RelativeLayout>



    <LinearLayout
        android:layout_marginTop="40dp"
        android:id="@+id/Txt_sua_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.1">

        <EditText
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:hint="아이디(이메일 주소)"
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="중복확인"/>


    </LinearLayout>


    <EditText
        android:id="@+id/Txt_sua_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.1"
        android:hint="비밀번호"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <EditText
        android:id="@+id/Txt_sua_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.1"
        android:hint="비밀번호 확인"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />
    <EditText
        android:id="@+id/Txt_sua_password1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.1"
        android:hint="이름 (실명 입력)"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:inputType="textPassword"
            android:hint="휴대전화번호('-' 제외)"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:text="중복확인"/>


    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="0.1"
        android:inputType="textPassword"
        android:hint="인증번호 입력"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0.7"
            android:inputType="textPassword"
            android:hint="생년월일(6자리입력)"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">


        <RadioButton
            android:id="@+id/rg_1_btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="false"
            android:text="남"

            />

        <RadioButton
            android:id="@+id/rg_1_btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:checked="true"
            android:text="여" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:checked="false"
            android:text="이용약관 동의" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:weightSum="1">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:checked="false"
            android:text="개인정보 취급 방침 동의" />
    </LinearLayout>

    <Button
        android:id="@+id/Btn_sua_signup"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="회원가입"
        android:textAlignment="center" />
</LinearLayout>